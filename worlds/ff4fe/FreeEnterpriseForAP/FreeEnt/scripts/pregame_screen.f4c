        ldx #$4b00
        stx $011d
        ldx #$f000
        stx $011f
        lda #$22
        sta $0121
        ldx #$0900
        stx $0122
        jsr $_MK_DMA

        // draw character select window
        jsr $_MK_SetBG2
        ldx #$0182
        stx $2b
        ldx #$0f1c
        stx $2d
        lda #$00
        sta $2f
        jsr $_MK_DrawWindow

        // draw bottom option window
        ldx #$05c2
        stx $2b
        ldx #$011c
        stx $2d
        lda #$00
        sta $2f
        jsr $_MK_DrawWindow

        ldx #$0604
        ldy #$_TagOptionText
        lda #$20
        jsr $_MK_DrawText

        jsr $_PregameNames__DrawTagOptionSetting

        // load sprites for party characters
