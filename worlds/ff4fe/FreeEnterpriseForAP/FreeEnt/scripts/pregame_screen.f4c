    %CopyCharacterGrayscalePaletteLoopStart:
        lda $0ecb00,x
        sta $7ea180,x
        inx
        cpx #$0020
        bcc $-CopyCharacterGrayscalePaletteLoopStart

        // draw names
        ldx #$0000
        stz $1682  // init job pointer

        lda #$00
        xba

    %DrawNameJobLoopStart:
        phx
        lda $1682
        asl a
        tax
        lda $=NameAddresses,x
        sta $1683
        inx
        lda $=NameAddresses,x
        sta $1684
        ldy $1683
        plx

        lda #$06
        sta $1683
    %CopyNameLoopStart:
        lda $=CharEx__GlobalNames,x
        sta $a600,y
        inx
        iny
        iny
        dec $1683
        bne $-CopyNameLoopStart

        inc $1682
        lda $1682
        cmp #$0c
        bcc $-DrawNameJobLoopStart


        // all done!
        rts

    .def PregameNames__CharacterSprites  $21d880

