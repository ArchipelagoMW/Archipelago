event($60)  //Meeting Tellah on Mt. Ordeals
{
    consts(placement) {
        0   Palom1
        1   Porom1
        2   Tellah1
    }
    // autodetected map #MountOrdeals2F
    p #Tellah1 toggle visible
    p #Tellah1 move down
    batch 3 {
        p #Tellah1 move left
    }
    p #Tellah1 face up
    pause 4
    player move up
    p #Tellah1 face down
    pause 4
    p #Tellah1 move down
    player move up
    player move up
    p #Tellah1 toggle visible

    [#B #Text_LoadRewardNameFromSlot #reward_slot.ordeals_character 0]
