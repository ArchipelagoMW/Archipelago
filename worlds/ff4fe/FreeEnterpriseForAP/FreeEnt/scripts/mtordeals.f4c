event($61)  //First Milon battle
{
    consts(placement) {
        0   HoodedMonster1_A
    }
    // autodetected map #MountOrdealsSummit
    music #None
    sound #Glow
    toggle tint $59
    music #Zot
    batch 6 {
        screen flash
    }
    batch 11 {
        p #HoodedMonster1_A toggle visible
    }
    toggle tint $00
    pause 8
    p #HoodedMonster1_A toggle visible
    [#B #Rando_BossBattle #rando.milon_slot]
